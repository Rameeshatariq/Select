<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/input_design">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">


       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participant Name:"
            android:theme="@style/TextViewHeading" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"></View>-->

        <TextView
            android:id="@+id/tvinprogpartiname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participant Name"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorToolbar"
            android:textSize="18dp"
            android:theme="@style/TextViewHeading" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"></View>

 <!--       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participant Contact:"
            android:theme="@style/TextViewHeading" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"></View>-->

        <TextView
            android:id="@+id/tvinprogparticontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participant Contact"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:layout_below="@+id/tvinprogpartiname"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:theme="@style/TextView" />

      <!--  <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participant Enroll:"
            android:theme="@style/TextViewHeading" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"></View>-->

        <TextView
            android:id="@+id/tvinprogpartienroll"
            android:layout_width="20dp"
            android:layout_height="5dp"
            android:theme="@style/TextView" />

        <LinearLayout
            android:layout_below="@id/tvinprogparticontact"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="1dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/patientDetail"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:text="Profile"
                android:layout_weight="1"
                android:textSize="10dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_detail"/>

            <Button
                android:id="@+id/tools"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:text="Tools"
                android:textSize="10dp"
                android:clickable="true"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:background="@drawable/button_design"/>


        </LinearLayout>

        </RelativeLayout>


</LinearLayout>