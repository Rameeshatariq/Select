        <View
            android:id="@+id/view_DL_Q2"
            android:layout_below="@id/linear_DL_Q2"
            android:layout_width="match_parent"
            android:layout_height="25dp">
        </View>

        <LinearLayout
            android:id="@+id/linear_DL_Q3"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_DL_Q2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TextViewHeading"
                android:text="@string/DietLifestyleQ3" />
            <TextView
                android:id="@+id/tv_DL_Q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TextView"
                android:text="@string/DietLifestyleQ3" />

        </LinearLayout>
        <View
            android:id="@+id/view_DL_Q3"
