<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowTool6aData">


    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvHeading"
            android:text="Tobacco Smoking"
            android:layout_gravity="center"
            android:theme="@style/TextViewHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/linear_TS_contact"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TextViewHeading"
                android:text="Contact Sim:" />
            <TextView
                android:id="@+id/pcontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:theme="@style/TextView"
                android:text="contact" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_TS_Q1"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeading">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TextViewHeading"
                android:text="@string/TobbaccoSmokingQ1" />

            <TextView
                android:id="@+id/tv_TS_Q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TextView"
                android:text="@string/TobbaccoSmokingQ1" />

        </LinearLayout>

        <View
            android:id="@+id/view_TS_Q1"
            android:layout_below="@id/linear_TS_Q1"
            android:layout_width="match_parent"
            android:layout_height="25dp">
        </View>


        <LinearLayout
            android:id="@+id/linear_TS_Q2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_TS_Q1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TextViewHeading"
                android:text="@string/TobbaccoSmokingQ2" />

            <TextView
                android:id="@+id/tv_TS_Q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TextView"
                android:text="@string/TobbaccoSmokingQ2" />

        </LinearLayout>

        <View
            android:id="@+id/view_TS_Q2"
            android:layout_below="@id/linear_TS_Q2"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        </View>


        <Button
            android:id="@+id/nextTool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:text="Next"
            android:theme="@style/Button" />
    </LinearLayout>


</RelativeLayout>