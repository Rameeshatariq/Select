<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".PhysicalActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvHeading"
                android:text="Physical Activity"
                android:layout_centerHorizontal="true"
                android:theme="@style/TextViewHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/linear_PA_Q1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHeading">


                <TextView
                    android:id="@+id/tv_PA_Q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextView"
                    android:layout_marginTop="20dp"
                    android:text="@string/PhysicalActivityQ1" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/ed_PA_Q1"
                        android:theme="@style/EditText"
                        android:ems="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView"
                        android:text="days/weeks"/>
                </LinearLayout>
                <com.rey.material.widget.CheckBox
                    android:id="@+id/ch_PA_Q1"
                    android:theme="@style/Checkbox"
                    android:text="No vigorous exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_PA_Q2"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_PA_Q1">


                <TextView
                    android:id="@+id/tv_PA_Q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextView"
                    android:text="@string/PhysicalActivityQ2" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/ed_PA_Q2_hours"
                        android:theme="@style/EditText"
                        android:ems="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView"
                        android:text="hours per day"/>
                    <EditText
                        android:id="@+id/ed_PA_Q2_days"
                        android:theme="@style/EditText"
                        android:ems="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView"
                        android:text="minutes per day"/>
                </LinearLayout>
                <com.rey.material.widget.CheckBox
                    android:id="@+id/ch_PA_Q2"
                    android:theme="@style/Checkbox"
                    android:text="Don't know/Not sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_PA_Q3"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_PA_Q2">

            <TextView
                android:id="@+id/tv_PA_Q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TextView"
                android:text="@string/PhysicalActivityQ3" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ed_PA_Q3"
                    android:theme="@style/EditText"
                    android:ems="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextView"
                    android:text="days/weeks."/>
            </LinearLayout>
            <com.rey.material.widget.CheckBox
                android:id="@+id/ch_PA_Q3"
                android:theme="@style/Checkbox"
                android:text="No moderate exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_PA_Q4"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_PA_Q3">


                <TextView
                    android:id="@+id/tv_PA_Q4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextView"
                    android:text="@string/PhysicalActivityQ4" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/ed_PA_Q4_hours"
                        android:theme="@style/EditText"
                        android:ems="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView"
                        android:text="hours per day"/>
                    <EditText
                        android:id="@+id/ed_PA_Q4_days"
                        android:theme="@style/EditText"
                        android:ems="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView"
                        android:text="minutes per day"/>
                </LinearLayout>
                <com.rey.material.widget.CheckBox
                    android:id="@+id/ch_PA_Q4"
                    android:theme="@style/Checkbox"
                    android:text="Don't know/Not sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_PA_Q5"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_PA_Q4">

                <TextView
                    android:id="@+id/tv_PA_Q5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextView"
                    android:text="@string/PhysicalActivityQ5" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/ed_PA_Q5"
                        android:theme="@style/EditText"
                        android:ems="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView"
                        android:text="days/weeks."/>
                </LinearLayout>
                <com.rey.material.widget.CheckBox
                    android:id="@+id/ch_PA_Q5"
                    android:theme="@style/Checkbox"
                    android:text="No walk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_PA_Q6"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_PA_Q5">


                <TextView
                    android:id="@+id/tv_PA_Q6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextView"
                    android:text="@string/PhysicalActivityQ6" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/ed_PA_Q6_hours"
                        android:theme="@style/EditText"
                        android:ems="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView"
                        android:text="hours per day"/>
                    <EditText
                        android:id="@+id/ed_PA_Q6_days"
                        android:theme="@style/EditText"
                        android:ems="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView"
                        android:text="minutes per day"/>
                </LinearLayout>
                <com.rey.material.widget.CheckBox
                    android:id="@+id/ch_PA_Q6"
                    android:theme="@style/Checkbox"
                    android:text="Don't know/Not sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_PA_submit"
                android:theme="@style/Button"
                android:text="Submit"
                android:layout_below="@id/linear_PA_Q6"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>