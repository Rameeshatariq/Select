<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgcompressed"
    android:orientation="vertical"
    tools:context=".ShowSummary">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ToolBar"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/linear_s_contact"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TextViewHeading"
                android:text="Contact Sim:" />
            <TextView
                android:id="@+id/pcontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:theme="@style/TextView"
                android:text="contact" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="25dp">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextViewHeading"
            android:text="Tool 1:"/>
        <TextView
            android:id="@+id/tool1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextView"
            android:text="Tool 1:"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="25dp">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextViewHeading"
            android:text="Tool 2:"/>
        <TextView
            android:id="@+id/tool2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextView"
            android:text="Tool 1:"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextViewHeading"
            android:text="Tool 3:"/>
        <TextView
            android:id="@+id/tool3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextView"
            android:text="Tool 1:"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextViewHeading"
            android:text="Tool 7:"/>
        <TextView
            android:id="@+id/tool7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextView"
            android:text="Tool 1:"/>

    </LinearLayout>


</LinearLayout>