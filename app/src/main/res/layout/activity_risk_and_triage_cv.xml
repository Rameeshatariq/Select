<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgcompressed"
    android:orientation="vertical"
    tools:context=".RiskAndTriageCVA">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ToolBar"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Risk and Triage Screening for CVA target event"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="45dp"
        android:textSize="15dp"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:textColor="@color/colorPrimaryDark" />

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/linear_rt_Q1"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHeading">

                <TextView
                    android:id="@+id/tv_rt_Q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextViewWhite"
                    android:text="@string/RiskAndTriageQ1" />
                <RadioGroup
                    android:id="@+id/rd_rt_Q1"
                    android:theme="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rd_rt_Q1_yes"
                        android:text="Yes"
                        android:textColor="@android:color/white"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rd_rt_Q1_no"
                        android:text="No"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:id="@+id/view_rt_Q1"
                android:layout_below="@id/linear_rt_Q1"
                android:layout_width="match_parent"
                android:layout_height="25dp">
            </View>


            <LinearLayout
                android:id="@+id/linear_rt_Q2"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_rt_Q1">

                <TextView
                    android:id="@+id/tv_rt_Q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextViewWhite"
                    android:text="@string/RiskAndTriageQ2" />
                <RadioGroup
                    android:id="@+id/rd_rt_Q2"
                    android:theme="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rd_rt_Q2_yes"
                        android:text="Yes"
                        android:textColor="@android:color/white"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rd_rt_Q2_no"
                        android:text="No"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:id="@+id/view_rt_Q2"
                android:layout_below="@id/linear_rt_Q2"
                android:layout_width="match_parent"
                android:layout_height="25dp">
            </View>

            <LinearLayout
                android:id="@+id/linear_rt_Q3"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_rt_Q2">

                <TextView
                    android:id="@+id/tv_rt_Q3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextViewWhite"
                    android:text="@string/RiskAndTriageQ3" />
                <RadioGroup
                    android:id="@+id/rd_rt_Q3"
                    android:theme="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rd_rt_Q3_yes"
                        android:theme="@style/RadioButton"
                        android:text="Yes"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rd_rt_Q3_no"
                        android:text="No"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:id="@+id/view_rt_Q3"
                android:layout_below="@id/linear_rt_Q3"
                android:layout_width="match_parent"
                android:layout_height="25dp">
            </View>

            <LinearLayout
                android:id="@+id/linear_rt_Q4"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_rt_Q3">

                <TextView
                    android:id="@+id/tv_rt_Q4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextViewWhite"
                    android:text="@string/RiskAndTriageQ4" />
                <RadioGroup
                    android:id="@+id/rd_rt_Q4"
                    android:theme="@style/RadioButton"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rd_rt_Q4_yes"
                        android:text="Yes"
                        android:textColor="@android:color/white"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rd_rt_Q4_no"
                        android:text="No"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:id="@+id/view_rt_Q4"
                android:layout_below="@id/linear_rt_Q4"
                android:layout_width="match_parent"
                android:layout_height="25dp">
            </View>

            <LinearLayout
                android:id="@+id/linear_rt_Q5"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_rt_Q4">

                <TextView
                    android:id="@+id/tv_rt_Q5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextViewWhite"
                    android:text="@string/RiskAndTriageQ5" />

                <RadioGroup
                    android:id="@+id/rd_rt_Q5"
                    android:theme="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rd_rt_Q5_yes"
                        android:text="Yes"
                        android:textColor="@android:color/white"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rd_rt_Q5_no"
                        android:text="No"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:id="@+id/view_rt_Q5"
                android:layout_below="@id/linear_rt_Q5"
                android:layout_width="match_parent"
                android:layout_height="25dp">
            </View>

            <LinearLayout
                android:id="@+id/linear_rt_Q6"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_rt_Q5">

                <TextView
                    android:id="@+id/tv_rt_Q6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextViewWhite"
                    android:text="@string/RiskAndTriageQ6" />
                <RadioGroup
                    android:id="@+id/rd_rt_Q6"
                    android:theme="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rd_rt_Q6_yes"
                        android:text="Yes"
                        android:textColor="@android:color/white"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rd_rt_Q6_no"
                        android:text="No"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/white"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:id="@+id/view_rt_Q6"
                android:layout_below="@id/linear_rt_Q6"
                android:layout_width="match_parent"
                android:layout_height="25dp">
            </View>

            <LinearLayout
                android:id="@+id/linear_rt_Q7"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_rt_Q6">

                <TextView
                    android:id="@+id/tv_rt_Q7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextViewWhite"
                    android:text="@string/RiskAndTriageQ7" />
                <RadioGroup
                    android:id="@+id/rd_rt_Q7"
                    android:theme="@style/RadioButton"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rd_rt_Q7_yes"
                        android:text="Yes"
                        android:textColor="@android:color/white"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rd_rt_Q7_no"
                        android:text="No"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:id="@+id/view_rt_Q7"
                android:layout_below="@id/linear_rt_Q7"
                android:layout_width="match_parent"
                android:layout_height="25dp">
            </View>

            <LinearLayout
                android:id="@+id/linear_rt_Q8"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_rt_Q7">

                <TextView
                    android:id="@+id/tv_rt_Q8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextViewWhite"
                    android:text="@string/RiskAndTriageQ8" />
                <RadioGroup
                    android:id="@+id/rd_rt_Q8"
                    android:theme="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rd_rt_Q8_yes"
                        android:text="Yes"
                        android:textColor="@android:color/white"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rd_rt_Q8_no"
                        android:text="No"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:id="@+id/view_rt_Q8"
                android:layout_below="@id/linear_rt_Q8"
                android:layout_width="match_parent"
                android:layout_height="30dp">
            </View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_rt_saveExit"
                    android:text="Save And Exit"
                    android:theme="@style/Button"
                    android:background="@drawable/rounded_button"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_rt_register"
                    android:layout_width="140dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/Button"
                    android:background="@drawable/rounded_button"
                    android:text="Submit" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>