<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowPatientData">

    <TextView
        android:text="Patient Detail"
        android:theme="@style/TextViewHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/patient_Data"
        android:layout_width="wrap_content"
        android:layout_height="542dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"></ListView>

    <Button
        android:id="@+id/tools_details"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/rounded_button"
        android:text="Tools Details"
        android:theme="@style/Button" />

</RelativeLayout>