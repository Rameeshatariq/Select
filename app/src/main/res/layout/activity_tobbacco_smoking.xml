<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TobbaccoSmoking">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ToolBar"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <ScrollView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvHeading"
                    android:text="Tobacco Smoking"
                    android:layout_gravity="center"
                    android:theme="@style/TextViewHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/linear_TS_Q1"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHeading">

                    <TextView
                        android:id="@+id/tv_TS_Q1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/TextView"
                        android:text="@string/TobbaccoSmokingQ1" />

                    <RadioGroup
                        android:id="@+id/rd_TS_Q1"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rd_TS_Q1_daily"
                            android:theme="@style/RadioButton"
                            android:text="Daily"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/rd_TS_Q1_less"
                            android:text="Less than Daily"
                            android:theme="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/rd_TS_Q1_not"
                            android:theme="@style/RadioButton"
                            android:text="Not At All"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/rd_TS_Q1_dntknw"
                            android:text="Dont Know"
                            android:theme="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/rd_TS_Q1_refused"
                            android:text="Refused"
                            android:theme="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RadioGroup>
                </LinearLayout>

                <View
                    android:id="@+id/view_TS_Q1"
                    android:layout_below="@id/linear_TS_Q1"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                </View>


                <LinearLayout
                    android:id="@+id/linear_TS_Q2"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_TS_Q1">

                    <TextView
                        android:id="@+id/tv_TS_Q2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/TextView"
                        android:text="@string/TobbaccoSmokingQ2" />

                    <RadioGroup
                        android:id="@+id/rd_TS_Q2"
                        android:theme="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rd_TS_Q2_daily"
                            android:text="Daily"
                            android:theme="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/rd_TS_Q2_less"
                            android:text="Less than Daily"
                            android:theme="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/rd_TS_Q2_not"
                            android:theme="@style/RadioButton"
                            android:text="Not At All"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/rd_TS_Q2_dntknw"
                            android:theme="@style/RadioButton"
                            android:text="Dont Know"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/rd_TS_Q2_refused"
                            android:theme="@style/RadioButton"
                            android:text="Refused"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RadioGroup>
                </LinearLayout>

                <View
                    android:id="@+id/view_TS_Q2"
                    android:layout_below="@id/linear_TS_Q2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                </View>

                <Button
                    android:id="@+id/btn_TS_saveExit"
                    android:text="Save And Exit"
                    android:theme="@style/Button"
                    android:background="@drawable/rounded_button"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/view_rt_saveExit"
                    android:layout_below="@id/linear_rt_Q8"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                </View>

                <Button
                    android:id="@+id/btn_TS_submit"
                    android:theme="@style/Button"
                    android:background="@drawable/rounded_button"
                    android:text="Submit"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
