            <TextView
                android:id="@+id/tv_rt_Q8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TextView"
                android:text="@string/RiskAndTriageQ8" />

        </LinearLayout>

        <View
            android:id="@+id/view_rt_Q8"
            android:layout_below="@id/linear_rt_Q8"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        </View>

        <Button
            android:id="@+id/nextTool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:text="Next"
            android:theme="@style/Button"></Button>

    </LinearLayout>

    </ScrollView>






